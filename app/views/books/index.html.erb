<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <span>
          <%= link_to book.title, book_path(book.id) %>
        </span>
      </td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= form_with model: @book , url: books_path, method: :post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
 
  <%= f.submit '投稿' %>
<% end %>  
